<h1>Welcome, <%= current_admin.full_name %></h1>
<div class="cohorts">
  <%= button_to'New Cohort', new_cohort_path, method: :get %>
  <br>
  <%= button_to 'New Student', new_student_path, method: :get %>
  <br>
  <strong>Active Cohorts</strong>
  <% @cohorts.each do |cohort| %>
    <% if cohort.active %>
      <p><%= link_to cohort.name, cohort_path(cohort.id) %></p>
    <% end %>
  <% end %>
</div>

<div class="students">
  <% @cohorts.each do |cohort| %>
    <% if cohort.active %>
      <strong><%= cohort.name %></strong>
      <ul>
      <% cohort.students.each do |student| %>
        <li><%= student.full_name %></li>
      <% end %>
      </ul>
    <% end %>
  <% end %>
</div>
