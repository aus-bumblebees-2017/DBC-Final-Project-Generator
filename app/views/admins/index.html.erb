<div class="cohorts">
  <%= button_to'New Cohort', new_cohort_path, method: :get %>
  <% @cohorts.each do |cohort| %>
    <% if cohort.active %>
      <p><%= link_to cohort.name, cohort_path(cohort.id) %></p>
    <% end %>
  <% end %>
</div>

<div class="students">
  <p>New Student Link - soon</p>
  <% @cohorts.each do |cohort| %>
    <% if cohort.active %>
      <%= cohort.name %>
      <% cohort.students.each do |student| %>
        <p><%= link_to student.full_name, student_path(student) %></p>
      <% end %>
    <% end %>
  <% end %>
</div>
