  <% if @student.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% @student.errors.full_messages.each do |msg| %>
          <li class="bg-warning text-black"><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<h1 class="bg-faded">
Welcome <%=  current_student.full_name %>
</h1>

<% if current_student.cohort.stage_id == 0 %>
  <h2>Pitches due date:
  <%= current_student.cohort.pitch_start %> </h2>
<% elsif current_student.cohort.stage_id == 1  %>
  <h2>Voting due date:
  <%= current_student.cohort.vote_end %> </h2>
<% end %>
<hr>
<% if current_student %>
  <%= render "./pitches/index.html.erb" %>
<% end %>

<% if current_student && current_student.cohort.stage_id >= 1 %>
  <%= render "./votes/vote.html.erb" %>
<% end %>
