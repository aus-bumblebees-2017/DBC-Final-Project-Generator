  <%= form_for :pitch, :url =>"/pitches" do |f|%>
  <%= f.hidden_field :student_id, :value => 1%>
    <div class="form-group col-lg-8 offset-md-2">
      <label for="name">Name: </label>
      <%= f.text_field :name, :class => "form-control "%><br>
    </div>
    <div class="form-group col-lg-8 offset-md-2">
      <label for="description">Description:</label>
      <%= f.text_area :description, :class => "form-control form-text-in"%><br>
    </div>
    <div class="form-group col-lg-8 offset-md-5">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
<% end %>



