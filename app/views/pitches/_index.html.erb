<h2>List of Project Pitches</h2>

<% if current_student.cohort.pitch_limit > current_student.pitches.count %>
<%= link_to("New Pitch", new_pitch_path) %> <br>
<% end %>

<% if @pitches %>
  <% @pitches.each_with_index do |pitch, index| %>
    <%= link_to("#{ index + 1 }. #{pitch.name}", pitch_path(pitch.id))%> <%=  link_to("edit", edit_pitch_path(pitch.id)) %> <%= link_to("delete", pitch_path(pitch.id) , method: "delete") %>  <br>
    <hr>
  <% end %>
<% end %>
<br>

